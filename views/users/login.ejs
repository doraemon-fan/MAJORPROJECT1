<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3 py-5">
        <h1>Log In on Wanderlust</h1>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div><label for="username" class="form-label my-3">Username</label>
                <input name="username" id="username" placeholder="Enter username" class="form-control" required> 
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Enter a valid title</div>
            </div>
            <div><label for="password" class="form-label my-3">Password</label>
                <input name="password" id="password" placeholder="Enter password" class="form-control" type="password" required> 
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Enter a valid password</div>
            </div>
            <button class="btn btn-success my-3">Log In</button>
        </form>
    </div>
</div>